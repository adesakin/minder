= simple_form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg  


  .field
    = f.label :customer_name, 'Customer Name'
    = f.text_field :customer_name
  .field
    = f.label :customer_email, 'Customer Email'
    = f.text_field :customer_email
  .field
    = f.label :department
    = f.text_field :department
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :body, 'Issue Details'
    = f.text_area :body
  .field
    = f.label :ref
    = f.text_field :ref
  .actions
    = f.submit 'Create Issue Ticket'
